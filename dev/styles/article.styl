
.article-head, .article-body
  max-width 740px
  font-family 'Merriweather', serif;
  font-weight 300
  overflow hidden
  h1,h2,h3
    font-weight bold
    color #222
  h1
    font-size 2rem
  h2 
    font-size 1.5rem
  h3
    font-size 1.2rem
    margin-top 30px
    margin-bottom 20px
  p a
    text-decoration underline

.article-head
  margin-top 50px
  margin-bottom 25px
  padding 0 25px
  h2
    display inline
    margin-left -50px
    font-weight bold
    margin-bottom 40px
  h3
    margin 0px
    


.button__project
  margin 10px auto
  text-align center
  display block
  
button-project-share()
  line-height 40px
  font-size 1.2rem
  font-weight bold
  margin 10px auto
  text-align center
  display inline-block
  border 2px solid #161616
  border-radius 5px
  &:hover
    border 2px solid #cecece
    scale 1.02
    
.button-project__try
  button-project-share()
  padding 0 15px
.button-project__code
  button-project-share()
  position absolute
  right 0
  top 0
  width 32px
  height 32px
  margin 0
  border-radius 100%
  color transparent
  background-color #000
  background-image url('/img/GitHub-Mark-Light-32px.png')
  background-size 100% auto
  background-repeat no-repeat
  background-position center center
  &:hover
    color transparent
  
.article-body
  padding 0 25px
  
img, .sider
  padding-top 25px
  padding-bottom 40px
  // +:after
  //   display block
  //   content ''
  //   clear both
  &.center
    margin 15px auto
    display block
  &.left
    float left
    margin-left -25px
    margin-right 25px
  &.right
    float right
    margin-left 25px
    margin-right -25px
  &+p
    padding-top 25px
    
p
  font-size 1.1rem
  span.small-caps
    font-variant small-caps
    color #000
    font-weight bold
  &+p 
    padding-top 25px
  &.small
    font-size 90%
    
ul
  li, h3
    padding-left 10px
    font-size 90%
    line-height 1.58
    letter-spacing -.003em
  li:before
    content "â€¢"
    padding-right 5px
    color black

.sider
  h3
    padding-left 10px
  li:before
    color blue
  &.left
    padding-right 20px
  &.right
    padding-left 20px