.masthead
  display inline-block
  color transparent
  
  span.logo
    background-position 100% 0
    background-size 200% 100%

  span.description
    color $text-color-logo
    text-align center
    display block
    position absolute
    top 100%
    left 0
    right 0
    
  &:after
    content ""
    height 100%
    width 100%
    background #222
    z-index 2
    display block
    position absolute
    top 0
    left 0
    transform-origin left
    transform scaleX(0)

  &.run
    animation mastheadInit 0.6s 0.5s forwards
    &:after 
      animation blackLoad 1.2s 0.5s cubic-bezier(0.860, 0.000, 0.070, 1.000) forwards

.fade 
  opacity 0
  transform translateY(20px)
  margin 10px 0 0 0
  margin 0 auto
  &.run
    animation fadeInit 0.6s 2s forwards
  &.run2
    animation fadeInit 0.6s 3.3s forwards //0.6 3.3
  &.delayhide
    animation fadeInit 0.6s 2s forwards, fadeInitHide 0.6s 3.2s forwards
    
@keyframes mastheadInit
  100%
    transition 0.6s all cubic-bezier(0.860, 0.000, 0.070, 1.000) 0.8s
    background-position 0 0
    color $text-color-logo
  
@keyframes blackLoad
  0%
    transform-origin left
    transform scaleX(0)
  50%
    transform-origin left
    transform scaleX(1)
  51%
    transform-origin right
  100%
    transform-origin right
    transform scaleX(0)

@keyframes fadeInit
  100%
    transition 0.6s all ease-out
    transform translateY(0)
    opacity 1
    
@keyframes fadeInitHide
  100%
    transition 0.6s all ease-out
    opacity 0


.view-transition-enter 
  opacity 0.01
  transform translateY(20px)

.view-transition-enter.view-transition-enter-active 
  opacity 1
  transform translateY(0px)
  transition opacity 500ms 300ms ease-in, transform 300ms 300ms ease-in


.view-transition-leave 
  opacity 1
  transform translateY(0px)
  position absolute
  top 0
  left 0
  right 0
.view-transition-leave.view-transition-leave-active
  opacity 0.01
  transform translateY(20px)
  transition opacity 300ms ease-in, transform 300ms ease-in
  position absolute
  top 0
  left 0
  right 0



