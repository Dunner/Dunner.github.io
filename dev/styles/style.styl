.masthead
  display inline-block
  color transparent
  
  span.description
    color #111
    text-align center
    display block
    position absolute
    top 100%
    left 0
    right 0
    
  &:after
    content ""
    height 100%
    width 100%
    background #222
    z-index 2
    display block
    position absolute
    top 0
    left 0
    transform-origin left
    transform scaleX(0)

  &.run
    animation mastheadInit 0.6s 0.5s forwards
    &:after 
      animation blackLoad 1.2s 0.5s cubic-bezier(0.860, 0.000, 0.070, 1.000) forwards


.min-100
  min-height 100px


$lines = rgba(0,0,0,0.03)
body
  background-image linear-gradient(0deg,$lines 1pt,transparent 0px),linear-gradient(90deg,$lines 1pt,transparent 0px) //pt because px weird x-browsers
  background-size 120px 120px
  